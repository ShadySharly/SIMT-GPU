#////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
#/////////////////////////////////////////////////////////////////// VARIABLES //////////////////////////////////////////////////////////////////////////
#////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
NVCC = nvcc
CL = clean
SRC_1 = suma2D.cu
SRC_2 = suma2dshm.cu
EXEC_1 = suma2D
EXEC_2 = suma2dshm

#////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
#//////////////////////////////////////////////////////////////////// TARGETS ///////////////////////////////////////////////////////////////////////////
#////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
PHONY: all
all: $(EXEC_1) $(EXEC_2) 

$(EXEC_1): $(SRC_1)
		$(NVCC) $(SRC_1) -o $@

$(EXEC_2): $(SRC_2)
		$(NVCC) $(SRC_2) -o $@

